        JMP MAIN
FACT:
        POP FACT.N
if1:
        PUSH FACT.N
        PUSH 1
        EQU
        JNC else1
then1:
        PUSH 1
        JMP endif1
else1:
        PUSH FACT.N
        PUSH FACT.N
        DEC
        CALL FACT
        MUL
endif1:
        RET

MAIN:
        PUSH 'Valeur n:'
        POP MAIN.CHAINE
        WRITE MAIN.CHAINE
        READ MAIN.N
        PUSH MAIN.N
        CALL FACT
        POP MAIN.RES
        WRITE MAIN.RES
        END
